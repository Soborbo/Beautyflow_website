// BreadcrumbList Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Főoldal",
      "item": "https://beautyflow.pro/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Beautyflow Pest",
      "item": "https://beautyflow.pro/beautyflow-pest"
    }
  ]
