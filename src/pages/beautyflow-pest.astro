// Testimonials specific to Pest location
const testimonials = [
  {
    name: 'Tóth Viktória',
    rating: 5,
    text: 'A pesti Beautyflow nagyon kényelmes számomra, hiszen a munkahelyem közelében van. A reggeli nyitás lehetővé teszi, hogy munka előtt is beférjek egy kezelésre. Kiváló szolgáltatás!',
    service: 'HydraBeauty arckezelés',
  },
  {
    name: 'Kiss Réka',
    rating: 5,
    text: 'Már 3 éve járok ide lézeres szőrtelenítésre. A csapat profi, a környezet tiszta és modern. Mindenkinek csak ajánlani tudom a XIII. kerületi szalont!',
    service: 'Lézeres szőrtelenítés',
  },
  {
    name: 'Molnár Dóra',
    rating: 5,
    text: 'Az ajak tetoválás olyan lett, amilyenről álmodtam. Nagyon természetes, mégis hangsúlyos. A konzultáción mindent átbeszéltünk, és pontosan azt kaptam, amit szerettem volna.',
