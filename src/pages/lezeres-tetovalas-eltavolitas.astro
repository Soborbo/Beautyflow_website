<script>
  function initRatingAnimation() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const ratingElements = document.querySelectorAll('.rating-number');

    if (prefersReducedMotion) {
      ratingElements.forEach(el => {
        el.textContent = el.getAttribute('data-target') || '5.0';
      });
      return;
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const el = entry.target as HTMLElement;
          const target = parseFloat(el.getAttribute('data-target') || '5.0');
          animateRating(el, target);
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });

    ratingElements.forEach(el => observer.observe(el));
  }

  function animateRating(element: HTMLElement, target: number) {
    const duration = 1500;
    const start = 1;
    const startTime = performance.now();

    function update(currentTime: number) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      const easeOut = 1 - Math.pow(1 - progress, 3);
      const current = start + (target - start) * easeOut;
      element.textContent = current.toFixed(1);
      if (progress < 1) {
        requestAnimationFrame(update);
      }
    }

    requestAnimationFrame(update);
  }

  function initFAQAccordion() {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');

      question?.addEventListener('click', () => {
        const isActive = item.classList.contains('active');

        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
            otherItem.querySelector('.faq-question')?.setAttribute('aria-expanded', 'false');
          }
        });

        item.classList.toggle('active');
        question.setAttribute('aria-expanded', (!isActive).toString());
      });
    });
  }

  function initSizeSelector() {
    const buttons = document.querySelectorAll('.size-selector-btn');
    const priceResult = document.getElementById('price-result');
    const selectedSize = document.getElementById('selected-size');
    const selectedPrice = document.getElementById('selected-price');
    const defaultText = document.querySelector('#selected-price-display > p');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        // Remove active state from all buttons
        buttons.forEach(b => {
          b.classList.remove('active');
          const square = b.querySelector('div');
          square?.classList.remove('from-[#6366f1]/30', 'to-[#6366f1]/40', 'border-[#6366f1]');
          square?.classList.add('from-gray-200', 'to-gray-300', 'border-transparent');
        });

        // Add active state to clicked button
        btn.classList.add('active');
        const square = btn.querySelector('div');
        square?.classList.remove('from-gray-200', 'to-gray-300', 'border-transparent');
        square?.classList.add('from-[#6366f1]/30', 'to-[#6366f1]/40', 'border-[#6366f1]');

        // Update display
        const size = btn.getAttribute('data-size');
        const price = btn.getAttribute('data-price')?.replace(' Ft', '').replace('-t√≥l', '');

        if (selectedSize && selectedPrice && priceResult && defaultText) {
          selectedSize.textContent = size || '';
          selectedPrice.textContent = price || '';
          priceResult.classList.remove('hidden');
          defaultText.classList.add('hidden');
        }
      });
    });
  }

  function initTreatmentSteps() {
    const steps = document.querySelectorAll('.treatment-step');
    const progress = document.querySelector('.treatment-progress') as HTMLElement;

    steps.forEach((step, index) => {
      step.addEventListener('click', () => {
        // Remove active from all
        steps.forEach(s => s.classList.remove('ring-2', 'ring-[#c53f75]', 'bg-[#c53f75]/10'));

        // Add active to clicked
        step.classList.add('ring-2', 'ring-[#c53f75]', 'bg-[#c53f75]/10');

        // Update progress bar
        if (progress) {
          const progressValues = [25, 50, 75, 100];
          progress.style.width = `${progressValues[index]}%`;
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    initRatingAnimation();
    initFAQAccordion();
    initSizeSelector();
    initTreatmentSteps();
  });
  document.addEventListener('astro:page-load', () => {
    initRatingAnimation();
    initFAQAccordion();
    initSizeSelector();
    initTreatmentSteps();
  });
</script>

