<script>
  function initBodyMap() {
    const priceData = {
      arc: { title: 'Teljes arc', single: '15 000', package: '127 500' },
      honalj: { title: 'Hónalj', single: '10 000', package: '85 000' },
      kar: { title: 'Teljes kar', single: '16 000', package: '136 000' },
      has: { title: 'Has', single: '15 000', package: '127 500' },
      intim: { title: 'Teljes intim + Popsi belső', single: '17 000', package: '144 500' },
      comb: { title: 'Comb', single: '17 000', package: '144 500' },
      labszar: { title: 'Lábszár térdig', single: '15 000', package: '127 500' },
      hat: { title: 'Hát', single: '20 000', package: '170 000' }
    };

    const hotspots = document.querySelectorAll('.body-hotspot');
    const priceDefault = document.getElementById('price-default');
    const priceContent = document.getElementById('price-content');
    const priceAreaTitle = document.getElementById('price-area-title');
    const priceSingle = document.getElementById('price-single');
    const pricePackage = document.getElementById('price-package');

    if (!hotspots.length || !priceDefault || !priceContent) return;

    hotspots.forEach(hotspot => {
      hotspot.addEventListener('click', () => {
        const area = hotspot.dataset.area;
        const data = priceData[area];

        if (!data) return;

        // Remove active class from all hotspots
        hotspots.forEach(h => h.classList.remove('active'));
        // Add active class to clicked hotspot
        hotspot.classList.add('active');

        // Update price panel
        priceAreaTitle.textContent = data.title;
        priceSingle.textContent = data.single;
        pricePackage.textContent = data.package;

        // Show price content, hide default
        priceDefault.classList.add('hidden');
        priceContent.classList.remove('hidden');
      });

      // Hover effect for touch devices
      hotspot.addEventListener('mouseenter', () => {
        hotspot.querySelector('.hotspot-label').style.opacity = '1';
        hotspot.querySelector('.hotspot-label').style.transform = 'translateY(0)';
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initBodyMap);
  document.addEventListener('astro:page-load', initBodyMap);

  // Google Rating Counter Animation
  function initGoogleRatingAnimation() {
    const ratingElement = document.querySelector('.google-rating-number');
    if (!ratingElement) return;

    const target = parseFloat(ratingElement.dataset.target) || 4.9;
    const duration = 2000; // 2 seconds
    const startValue = 1.0;
    let hasAnimated = false;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting && !hasAnimated) {
          hasAnimated = true;
          animateCounter(ratingElement, startValue, target, duration);
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });

    observer.observe(ratingElement);
  }

  function animateCounter(element, start, end, duration) {
    const startTime = performance.now();

    function update(currentTime) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);

      // Easing function (ease-out)
      const easeOut = 1 - Math.pow(1 - progress, 3);
      const current = start + (end - start) * easeOut;

      element.textContent = current.toFixed(1);

      if (progress < 1) {
        requestAnimationFrame(update);
      }
    }

    requestAnimationFrame(update);
  }

  document.addEventListener('DOMContentLoaded', initGoogleRatingAnimation);
  document.addEventListener('astro:page-load', initGoogleRatingAnimation);

  // FAQ Animated Accordion
  function initFaqAnimations() {
    const faqItems = document.querySelectorAll('.faq-item details');

    faqItems.forEach(details => {
      const content = details.querySelector('.faq-content');
      if (!content) return;

      // Set initial state
      content.style.overflow = 'hidden';
      content.style.transition = 'max-height 0.3s ease-out, opacity 0.3s ease-out';

      if (!details.open) {
        content.style.maxHeight = '0';
        content.style.opacity = '0';
      } else {
        content.style.maxHeight = content.scrollHeight + 'px';
        content.style.opacity = '1';
      }

      details.addEventListener('toggle', () => {
        if (details.open) {
          // Opening
          content.style.maxHeight = content.scrollHeight + 'px';
          content.style.opacity = '1';
        } else {
          // Closing
          content.style.maxHeight = '0';
          content.style.opacity = '0';
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initFaqAnimations);
  document.addEventListener('astro:page-load', initFaqAnimations);

  // ========== JOURNEY SECTION INTERACTIVITY ==========
  function initJourneySection() {
    const journeyData = [
      {
        title: 'Ingyenes tanácsadás',
        description: 'Az első, ingyenes konzultáció során felmérjük a bőröd és a szőr típusát és állapotát. Elmondjuk, mire figyelj oda és minden kérdésedre választ adunk.',
        extra: '<p class="text-sm text-gray-700"><strong>Időtartam:</strong> 15-20 perc</p><p class="text-sm text-gray-700 mt-2"><strong>Mit hozz magaddal?</strong> Semmit, csak magadat!</p><p class="text-sm text-gray-700 mt-2"><strong>Tipp:</strong> Írd össze előre a kérdéseidet, hogy semmit ne felejts el megkérdezni.</p>'
      },
      {
        title: 'Minden kezelés előtt',
        description: 'Teljes kozmetikai váltóruhát kapsz tőlünk. Lefertőtlenítjük a kezelendő területet, letakarjuk a tetoválásokat, anyajegyeket, és beállítjuk a gépet.',
        extra: '<p class="text-sm text-gray-700"><strong>Felkészülés:</strong> A kezelés előtt 24-48 órával borotváld le a területet.</p><p class="text-sm text-gray-700 mt-2"><strong>Kerülendő:</strong> Napozás és önbarnító 2 hétig a kezelés előtt.</p>'
      },
      {
        title: 'A kezelés menete',
        description: 'A kezelés 10-120 perc hosszú. Fájdalmat nem fogsz érezni, maximum enyhe csipkedést és melegséget, amit a gép hűtőfeje enyhít.',
        extra: '<p class="text-sm text-gray-700"><strong>Hogyan működik?</strong> A lézer célzottan a szőrtüsző melaninjára hat.</p><p class="text-sm text-gray-700 mt-2"><strong>Komfort:</strong> A modern gépünk beépített hűtőrendszere gondoskodik arról, hogy kényelmes legyen a kezelés.</p>'
      },
      {
        title: 'Hány kezelésre lesz szükséged?',
        description: '10-12 alkalom (havonta egyszer) szükséges a tartós eredményhez. Később évente 1-2 karbantartó kezelés javasolt.',
        extra: '<p class="text-sm text-gray-700"><strong>Miért több alkalom?</strong> A szőrszálak különböző növekedési fázisban vannak, és a lézer csak az aktív fázisban lévőket tudja kezelni.</p><p class="text-sm text-gray-700 mt-2"><strong>Eredmény:</strong> Már az első kezelések után látható a változás!</p>'
      }
    ];

    // Mobile scroll detection
    const mobileCards = document.querySelector('.journey-cards-mobile');
    const progressDots = document.querySelectorAll('.journey-progress-dot');
    const stepLabel = document.querySelector('.journey-step-label');
    const mobileCardElements = document.querySelectorAll('.journey-card-mobile');

    if (mobileCards && progressDots.length) {
      let currentStep = 0;

      // Handle scroll on mobile
      mobileCards.addEventListener('scroll', () => {
        const scrollLeft = mobileCards.scrollLeft;
        const cardWidth = mobileCards.querySelector('.journey-card-mobile')?.offsetWidth || 300;
        const gap = 16;
        const newStep = Math.round(scrollLeft / (cardWidth + gap));

        if (newStep !== currentStep && newStep >= 0 && newStep < progressDots.length) {
          currentStep = newStep;
          updateProgressDots(currentStep);
          updateMobileCards(currentStep);
        }
      });

      // Click on progress dots
      progressDots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          currentStep = index;
          updateProgressDots(currentStep);
          updateMobileCards(currentStep);

          // Scroll to card on mobile
          if (window.innerWidth < 1024 && mobileCards) {
            const cardWidth = mobileCards.querySelector('.journey-card-mobile')?.offsetWidth || 300;
            const gap = 16;
            mobileCards.scrollTo({
              left: index * (cardWidth + gap),
              behavior: 'smooth'
            });
          }
        });
      });

      function updateProgressDots(activeIndex) {
        progressDots.forEach((dot, i) => {
          dot.classList.toggle('bg-[#c53f75]', i <= activeIndex);
          dot.classList.toggle('bg-gray-300', i > activeIndex);
          dot.classList.toggle('scale-125', i === activeIndex);
          dot.classList.toggle('active', i === activeIndex);
        });

        if (stepLabel) {
          stepLabel.textContent = `${activeIndex + 1} / ${progressDots.length}`;
        }
      }

      function updateMobileCards(activeIndex) {
        mobileCardElements.forEach((card, i) => {
          card.classList.toggle('active', i === activeIndex);
        });
      }
    }

    // Desktop card clicks - open modal
    const desktopCards = document.querySelectorAll('.journey-cards-desktop .journey-card');
    const modal = document.getElementById('journey-modal');
    const modalClose = document.getElementById('journey-modal-close');
    const modalStepNumber = document.getElementById('modal-step-number');
    const modalTitle = document.getElementById('modal-title');
    const modalDescription = document.getElementById('modal-description');
    const modalExtra = document.getElementById('modal-extra');

    if (desktopCards.length && modal) {
      desktopCards.forEach((card, index) => {
        card.addEventListener('click', () => {
          const data = journeyData[index];
          if (!data) return;

          modalStepNumber.textContent = index + 1;
          modalTitle.textContent = data.title;
          modalDescription.textContent = data.description;
          modalExtra.innerHTML = data.extra;

          modal.classList.remove('hidden');
          setTimeout(() => modal.classList.add('active'), 10);

          // Prevent body scroll
          document.body.style.overflow = 'hidden';
        });
      });

      // Close modal
      function closeModal() {
        modal.classList.remove('active');
        setTimeout(() => {
          modal.classList.add('hidden');
          document.body.style.overflow = '';
        }, 300);
      }

      modalClose?.addEventListener('click', closeModal);

      modal.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('active')) {
          closeModal();
        }
      });
    }

    // Intersection Observer for scroll-triggered animations
    const journeySection = document.getElementById('kezelesi-menet');
    if (journeySection) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('in-view');
              // Trigger timeline animations
              const timelineItems = entry.target.querySelectorAll('.journey-timeline-item');
              timelineItems.forEach((item, i) => {
                setTimeout(() => {
                  item.style.opacity = '1';
                  item.style.transform = 'translateY(0)';
                }, i * 150);
              });
            }
          });
        },
        { threshold: 0.2 }
      );

      observer.observe(journeySection);
    }
  }

  document.addEventListener('DOMContentLoaded', initJourneySection);
  document.addEventListener('astro:page-load', initJourneySection);
</script>
