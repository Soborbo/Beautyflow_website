    const pricePackage = document.getElementById('price-package');

    if (!hotspots.length || !priceDefault || !priceContent || !priceTabs) return;

    function updatePrices(subArea: SubArea) {
      if (priceSingle) priceSingle.textContent = subArea.single;
      if (pricePackage) pricePackage.textContent = subArea.package;
    }

    function renderTabs(areaData: AreaData) {
      if (!priceTabs) return;
      priceTabs.innerHTML = '';

      areaData.subAreas.forEach((subArea, index) => {
        const tab = document.createElement('button');
        tab.className = `px-4 py-2 text-sm font-medium border-b-2 transition-all duration-200 cursor-pointer ${
          index === 0
            ? 'border-[#c53f75] text-[#c53f75]'
            : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
        }`;
        tab.textContent = subArea.label;
        tab.addEventListener('click', () => {
          // Update active tab styling
          priceTabs.querySelectorAll('button').forEach(btn => {
            btn.className = 'px-4 py-2 text-sm font-medium border-b-2 transition-all duration-200 cursor-pointer border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300';
          });
          tab.className = 'px-4 py-2 text-sm font-medium border-b-2 transition-all duration-200 cursor-pointer border-[#c53f75] text-[#c53f75]';
          // Update prices
          updatePrices(subArea);
        });
        priceTabs.appendChild(tab);
      });

      // Show first sub-area prices by default
      updatePrices(areaData.subAreas[0]);
    }

    hotspots.forEach(hotspot => {
      hotspot.addEventListener('click', () => {
        const area = (hotspot as HTMLElement).dataset.area;
        if (!area) return;
        const areaData = priceData[area];

        if (!areaData) return;

        // Remove active class from all hotspots
        hotspots.forEach(h => h.classList.remove('active'));
        // Add active class to clicked hotspot
        hotspot.classList.add('active');

        // Update title
        if (priceAreaTitle) priceAreaTitle.textContent = areaData.title;

        // Render tabs and prices
        renderTabs(areaData);

        // Show price content, hide default
        priceDefault.classList.add('hidden');
        priceContent.classList.remove('hidden');
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initBodyMapPricing);
  document.addEventListener('astro:page-load', initBodyMapPricing);

  // Journey cards swipe hint - stop animation after scroll
  function initJourneySwipeHint() {
    const scrollContainer = document.querySelector('.journey-scroll-container');
    if (!scrollContainer) return;

    let hasScrolled = false;
    scrollContainer.addEventListener('scroll', () => {
      if (!hasScrolled) {
        hasScrolled = true;
        scrollContainer.classList.add('scrolled');
      }
    }, { passive: true });
  }

  document.addEventListener('DOMContentLoaded', initJourneySwipeHint);
  document.addEventListener('astro:page-load', initJourneySwipeHint);

  // FAQ Accordion functionality
  function initFAQAccordion() {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');

      question?.addEventListener('click', () => {
        const isActive = item.classList.contains('active');

        // Close all other items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
            otherItem.querySelector('.faq-question')?.setAttribute('aria-expanded', 'false');
          }
        });

        // Toggle current item
        item.classList.toggle('active');
        question.setAttribute('aria-expanded', (!isActive).toString());
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initFAQAccordion);
  document.addEventListener('astro:page-load', initFAQAccordion);
</script>
