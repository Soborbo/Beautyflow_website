// BreadcrumbList Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://beautyflow.pro/en"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Beautyflow Buda",
