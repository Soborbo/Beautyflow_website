  }

  .timeline-sticky-container {
    position: sticky;
    top: 0;
    height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .timeline-track {
    transition: transform 0.1s ease-out;
    will-change: transform;
  }

  .timeline-item {
