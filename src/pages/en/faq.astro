  'permanent-makeup': { primary: '#6366f1', light: '#a5b4fc', bg: '#eef2ff', shadow: 'rgba(99, 102, 241, 0.15)' },
  'carbon-peeling': { primary: '#8b5cf6', light: '#c4b5fd', bg: '#f5f3ff', shadow: 'rgba(139, 92, 246, 0.15)' },
