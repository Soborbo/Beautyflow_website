<Layout lang="en" title="Frequently Asked Questions (FAQ) - Beautyflow Beauty Salon" description="Answers to the most frequently asked questions about laser hair removal, HydraBeauty facial, permanent makeup, and other cosmetic treatments.">
  <!-- FAQ Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero Section -->
  <section class="relative py-8 lg:py-12 bg-gradient-to-br from-[#fdf8f6] via-white to-[#f8f4f9]">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-0 right-0 w-96 h-96 bg-[#c53f75]/5 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-[#e497a2]/10 rounded-full blur-3xl animate-float-delayed"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="font-heading text-4xl lg:text-6xl text-gray-900 mb-6 animate-fade-in">
          Frequently Asked <span class="text-[#c53f75]">Questions</span>
        </h1>
        <p class="text-lg text-gray-600 leading-relaxed animate-fade-in-delayed">
          We have compiled the most frequently asked questions and answers about our treatments,
          so you can find all the important information in one place.
        </p>
      </div>
    </div>
  </section>

  <!-- Category Navigation -->
  <section class="sticky top-[60px] z-40 bg-white/95 backdrop-blur-md border-b border-gray-100 shadow-sm">
    <div class="container mx-auto px-4">
      <nav class="flex overflow-x-auto py-4 gap-2 scrollbar-hide md:justify-center" id="faq-nav">
        {faqCategories.map((category, index) => {
          const colors = categoryColors[category.id];
          return (
