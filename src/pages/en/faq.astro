<script>
  function initFAQ() {
    // Accordion functionality with smooth animation
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach((item, idx) => {
      // Set stagger animation delay
      (item as HTMLElement).style.animationDelay = `${idx * 30}ms`;

      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');

      question?.addEventListener('click', () => {
        const isActive = item.classList.contains('active');

        // Close all other items in the same category
        const parentCategory = item.closest('.faq-category');
        parentCategory?.querySelectorAll('.faq-item.active').forEach(activeItem => {
          if (activeItem !== item) {
            activeItem.classList.remove('active');
            activeItem.querySelector('.faq-question')?.setAttribute('aria-expanded', 'false');
          }
        });

        // Toggle current item
        item.classList.toggle('active');
        question.setAttribute('aria-expanded', (!isActive).toString());
      });
    });

    // Category navigation with smooth scroll
    const navButtons = document.querySelectorAll('.faq-nav-btn');
    const categories = document.querySelectorAll('.faq-category');

    // Helper to set nav button active state with dynamic color
    function setNavButtonActive(btn: Element, isActive: boolean) {
      const color = btn.getAttribute('data-color');
      const shadow = btn.getAttribute('data-shadow');
      const htmlBtn = btn as HTMLElement;

      if (isActive) {
        htmlBtn.style.backgroundColor = color || '#6366f1';
        htmlBtn.style.boxShadow = `0 10px 15px -3px ${shadow || 'rgba(99, 102, 241, 0.15)'}`;
        btn.classList.add('text-white', 'shadow-lg');
        btn.classList.remove('bg-gray-100', 'text-gray-600');
      } else {
        htmlBtn.style.backgroundColor = '';
        htmlBtn.style.boxShadow = '';
        btn.classList.remove('text-white', 'shadow-lg');
        btn.classList.add('bg-gray-100', 'text-gray-600');
      }
    }

    navButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const targetId = btn.getAttribute('data-target');
        const targetCategory = document.getElementById(targetId || '');

        if (targetCategory) {
          targetCategory.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Update active nav button with animation
        navButtons.forEach(b => setNavButtonActive(b, b === btn));
      });
    });

    // Update nav on scroll with Intersection Observer
    const observerOptions = {
      rootMargin: '-150px 0px -50% 0px',
      threshold: 0
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          navButtons.forEach(btn => {
            const isTarget = btn.getAttribute('data-target') === id;
            setNavButtonActive(btn, isTarget);
          });
        }
      });
    }, observerOptions);

    categories.forEach(category => observer.observe(category));

    // Add entrance animation to FAQ items when they come into view
    const itemObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-visible');
          itemObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });

    faqItems.forEach(item => itemObserver.observe(item));
  }

  document.addEventListener('DOMContentLoaded', initFAQ);
  document.addEventListener('astro:page-load', initFAQ);
</script>
