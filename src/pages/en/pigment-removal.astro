const treatments = [
  { area: '1 pigment spot', sessions: '1 session', price: '10,000 Ft' },
  { area: '2 pigment spots', sessions: '1 session', price: '15,000 Ft' },
  { area: '3 pigment spots', sessions: '1 session', price: '20,000 Ft' },
  { area: '4 pigment spots', sessions: '1 session', price: '25,000 Ft' },
  { area: '5 pigment spots', sessions: '1 session', price: '30,000 Ft' },
