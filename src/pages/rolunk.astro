---
import Layout from '../layouts/Layout.astro';
import LocationsSection from '../components/LocationsSection.astro';

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Beautyflow Szépségszalon",
  "url": "https://beautyflow.hu",
  "logo": "https://beautyflow.hu/images/Beautyflow-favicon.png",
  "description": "Többszörösen díjnyertes szépségszalon Budapesten. Lézeres szőrtelenítés, sminktetoválás, arckezelések.",
  "foundingDate": "2014",
  "founder": {
    "@type": "Person",
    "name": "Kónya Fanni"
  },
  "numberOfEmployees": "6",
  "address": [
    {
      "@type": "PostalAddress",
      "streetAddress": "Vegyész utca 1.",
      "addressLocality": "Budapest",
      "postalCode": "1116",
      "addressCountry": "HU"
    },
    {
      "@type": "PostalAddress",
      "streetAddress": "Reitter Ferenc utca 90.",
      "addressLocality": "Budapest",
      "postalCode": "1135",
      "addressCountry": "HU"
    }
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+36 1 300 9414",
    "contactType": "customer service",
    "availableLanguage": "Hungarian"
  },
  "sameAs": [
    "https://www.instagram.com/beautyflow.hu/",
    "https://www.facebook.com/beautyflow.hu/"
  ]
};

const milestones = [
  { year: '2015', event: 'Kónya Fanni elvégzi a kozmetikusképzést' },
  { year: '2020', event: 'Megnyílik a Beautyflow Buda' },
  { year: '2023', event: 'Fanni megveszi az első diódalézert' },
  { year: '2024', event: 'A Hónap Szalonja leszünk a Notinón' },
  { year: '2025', event: 'Megnyílik a Beautyflow Pest' }
];

const teamMembers = [
  {
    name: 'Kónya Fanni',
    role: 'Tulajdonos, Vezető kozmetikus',
    image: '/images/Konya-Fanni-sq.jpg',
    description: 'A Beautyflow alapítója és lelke. Fanni több mint 10 éves tapasztalattal rendelkezik a szépségiparban. Szakterülete a lézeres szőrtelenítés és a sminktetoválás.',
    treatments: [
      { name: 'Lézeres szőrtelenítés', url: '/dioda-lezeres-szortelenites' },
      { name: 'Sminktetoválás', url: '/sminktetovalas' },
      { name: 'Konzultáció', url: '/ingyenes-konzultacio' }
    ]
  },
  {
    name: 'Fodor Inez Vivien',
    role: 'Kozmetikus',
    image: '/images/fodor-inez.jpg',
    description: 'A Beautyflow Pest szalonjában várlak titeket! Főként diódalézeres szőrtelenítéssel és carbon peeling kezelésekkel foglalkozom. Fontos számomra, hogy a kezelések kellemes hangulatban, nyugodt környezetben történjenek.',
    treatments: [
      { name: 'Diódalézeres szőrtelenítés', url: '/dioda-lezeres-szortelenites' },
      { name: 'Carbon Peeling', url: '/carbon-peeling' }
    ]
  },
  {
    name: 'Nagy Piroska',
    role: 'Kozmetikus',
    image: '/images/Nagy-Piroska.jpg',
    description: '2016 óta kozmetikus, Gyöngyösön és Budapesten végeztem. A legfontosabb számomra, hogy a munkám precízen végezzem, a vendég elégedett legyen és feltöltődve távozzon.',
    treatments: [
      { name: 'Arckezelések', url: '/hydrabeauty' },
      { name: 'Carbon Peeling', url: '/carbon-peeling' }
    ]
  },
  {
    name: 'Désvári Lili Rozi',
    role: 'Kozmetikus',
    image: '/images/Desvari-Lili-Rozi.jpg',
    description: 'Péntekenként a pesti, vasárnaponként a budai szalonban várlak titeket! Folyamatos önfejlesztésemnek hála a szolgáltatásaim köre folyamatosan bővül.',
    treatments: [
      { name: 'Diódalézeres szőrtelenítés', url: '/dioda-lezeres-szortelenites' }
    ]
  },
  {
    name: 'Trexler Janka',
    role: 'Kozmetikus',
    image: '/images/trexler-janka-kozmetikus.jpg',
    description: 'A Sisyben tanultam ki ezt a gyönyörű szakmát. Célom, hogy a kezelések jó hangulatban teljenek és vendégeim elégedetten, mosollyal az arcukon távozzanak!',
    treatments: [
      { name: 'Arckezelések', url: '/hydrabeauty' },
      { name: 'Carbon Peeling', url: '/carbon-peeling' }
    ]
  },
  {
    name: 'Varga Andrea',
    role: 'Kozmetikus, Sminktetováló',
    image: '/images/Varga-Andrea.jpg',
    description: 'Hatalmas öröm, hogy a Beautyflow csapatát erősíthetem! Hiszem, hogy a szépség belülről fakad, de egy kis szakértelemmel és odafigyeléssel kívül is ragyogtatható.',
    treatments: [
      { name: 'Carbon Peeling', url: '/carbon-peeling' },
      { name: 'Diódalézeres szőrtelenítés', url: '/dioda-lezeres-szortelenites' },
      { name: 'Sminktetoválás', url: '/sminktetovalas' }
    ]
  }
];

const values = [
  {
    icon: 'heart',
    title: 'Törődés',
    description: 'Minden vendégünket egyedi figyelemmel és törődéssel kezeljük. Nálunk nem csak egy szám vagy egy időpont vagy.'
  },
  {
    icon: 'star',
    title: 'Minőség',
    description: 'Csak a legjobb eszközökkel és termékekkel dolgozunk. Folyamatosan képezzük magunkat, hogy a legmodernebb technikákat alkalmazhassuk.'
  },
  {
    icon: 'shield',
    title: 'Biztonság',
    description: 'Minden higiéniai elvárásnak megfelelünk, és mindent megteszünk azért, hogy biztonságban érezd magad.'
  }
];
---

<Layout title="Rólunk - Beautyflow Szépségszalon Budapest" description="Ismerd meg a Beautyflow történetét, csapatát és értékeit. Többszörösen díjnyertes szépségszalon Budapesten, ahol a vendég mindig az első.">
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />

  <!-- Hero Section -->
  <section class="py-16 lg:py-20 bg-gradient-to-br from-[#fdf8f6] via-[#fef5f2] to-[#fff9f7]">
    <div class="max-w-[1100px] mx-auto px-4 text-center">
      <h1 class="font-heading text-4xl lg:text-5xl text-gray-900 mb-4">
        A Beautyflow csapata
      </h1>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Ismerd meg a szakembereket, akik gondoskodnak rólad! Csapatunk elkötelezett a minőség és a személyre szabott szolgáltatás iránt.
      </p>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="max-w-[1100px] mx-auto px-4">
      <div class="grid gap-10 lg:grid-cols-2 lg:gap-16 items-center">
        <div>
          <h2 class="font-heading text-3xl lg:text-4xl text-gray-900 mb-6">
            A történetünk
          </h2>
          <div class="space-y-4 text-gray-600">
            <p>
              A Beautyflow-t 2014-ben alapította Kónya Fanni, azzal a céllal, hogy egy olyan szépségszalont hozzon létre, ahol minden vendég valódi törődést és professzionális szolgáltatást kap.
            </p>
            <p>
              Az évek során két modern szalonná bővültünk - egyet Budán, egyet Pesten - és ma már 6 fős csapattal dolgozunk. A Notino "Hónap Szépségszalonja" díjat is elnyertük, ami visszaigazolja munkánk minőségét.
            </p>
            <p>
              Hitvallásunk egyszerű: minden vendég egyedi, és megérdemli a legjobb kezelést. Ezért szentelünk időt az ingyenes konzultációkra és a személyre szabott tanácsadásra.
            </p>
          </div>
        </div>
        <div>
          <img
            src="/images/beautyflow-dijak.webp"
            alt="Beautyflow - Notino Hónap Szalonja díj"
            class="w-full rounded-2xl shadow-lg"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline Section - Horizontal -->
  <section class="py-16 lg:py-20 bg-gradient-to-b from-[#fdf8f6] to-white overflow-hidden">
    <div class="max-w-[1100px] mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-heading text-3xl lg:text-4xl text-gray-900">
          Mérföldkövek
        </h2>
      </div>

      <!-- Horizontal scrollable timeline -->
      <div class="relative">
        <div class="overflow-x-auto pb-4 -mx-4 px-4 scrollbar-hide">
          <div class="flex gap-4 min-w-max">
            {milestones.map((milestone, index) => (
              <div class="flex flex-col items-center min-w-[200px] relative">
                <!-- Year circle -->
                <div class="w-16 h-16 rounded-full bg-[#c53f75] flex items-center justify-center text-white font-heading text-xl shadow-lg z-10">
                  {milestone.year}
                </div>

                <!-- Connecting line -->
                {index < milestones.length - 1 && (
                  <div class="absolute top-8 left-[calc(50%+32px)] w-[calc(200px-32px)] h-0.5 bg-[#c53f75]/30"></div>
                )}

                <!-- Event card -->
                <div class="mt-4 bg-white p-4 rounded-xl shadow-md text-center max-w-[180px]">
                  <p class="text-gray-700 text-sm leading-relaxed">{milestone.event}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Scroll hint for mobile -->
        <div class="flex justify-center mt-4 lg:hidden">
          <p class="text-gray-400 text-xs flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
            Húzd oldalra
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 lg:py-20 bg-gradient-to-br from-[#fdf8f6] via-[#fef5f2] to-[#fff9f7]">
    <div class="max-w-[1100px] mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-heading text-3xl lg:text-4xl text-gray-900 mb-4">
          Ismerd meg csapatunkat
        </h2>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {teamMembers.map((member) => (
          <div class="bg-white border border-gray-100 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow">
            <!-- Image or Initials -->
            <div class="flex justify-center pt-6">
              {member.image ? (
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-32 h-32 rounded-full object-cover shadow-md"
                  loading="lazy"
                />
              ) : (
                <div class="w-32 h-32 rounded-full bg-[#c53f75]/10 flex items-center justify-center shadow-md">
                  <span class="font-heading text-3xl text-[#c53f75]">{member.initials}</span>
                </div>
              )}
            </div>

            <!-- Content -->
            <div class="p-6 text-center">
              <h3 class="font-heading text-xl text-gray-900 mb-1">{member.name}</h3>
              <p class="text-[#c53f75] text-sm font-medium mb-3">{member.role}</p>
              <p class="text-gray-600 text-sm mb-4 leading-relaxed">{member.description}</p>

              <!-- Treatments as buttons -->
              <div class="flex flex-wrap justify-center gap-2">
                {member.treatments.map((treatment) => (
                  <a
                    href={treatment.url}
                    class="inline-block px-4 py-2 text-xs text-[#c53f75] bg-[#c53f75]/10 rounded-full hover:bg-[#c53f75]/20 transition-colors"
                  >
                    {treatment.name}
                  </a>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-16 lg:py-20 bg-gradient-to-b from-[#fdf8f6] to-white">
    <div class="max-w-[1100px] mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-heading text-3xl lg:text-4xl text-gray-900">
          Értékeink
        </h2>
      </div>

      <div class="grid gap-8 md:grid-cols-3">
        {values.map((value) => (
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-4 bg-[#c53f75]/10 rounded-full flex items-center justify-center text-[#c53f75]">
              {value.icon === 'heart' && (
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              )}
              {value.icon === 'star' && (
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              )}
              {value.icon === 'shield' && (
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
            </div>
            <h3 class="font-heading text-xl text-gray-900 mb-3">{value.title}</h3>
            <p class="text-gray-600 text-sm leading-relaxed max-w-xs mx-auto">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-20 bg-[#c53f75]">
    <div class="max-w-[900px] mx-auto px-4 text-center">
      <p class="font-heading text-3xl lg:text-4xl text-white mb-6">
        Ismerjük meg egymást személyesen!
      </p>
      <p class="text-white/80 mb-8 max-w-xl mx-auto">
        Gyere el egy ingyenes konzultációra és ismerd meg csapatunkat, mielőtt döntesz!
      </p>
      <div class="flex justify-center">
        <a
          href="/ingyenes-konzultacio"
          class="inline-block px-8 py-4 bg-white text-[#c53f75] font-bold uppercase text-sm rounded-full shadow-lg hover:bg-gray-100 transition-all"
        >
          Ingyenes konzultációt kérek
        </a>
      </div>
    </div>
  </section>

  <!-- Locations Section -->
  <LocationsSection />

</Layout>

<style>
  /* Hide scrollbar but keep functionality */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
