---
import { CardImage, FixedImage } from './images';
import { type Locale, defaultLang } from '../i18n';
import aiGepImg from '../assets/images/mesterseges-intelligencia-szortelenito-gep.jpg';
import szegyenlosImg from '../assets/images/szegyenlos.jpg';
import legkorImg from '../assets/images/konya-fanni-szepsegszalonja-1.jpg';
import higienaImg from '../assets/images/higienia.jpg';
import testmeretImg from '../assets/images/testmeret.jpg';
import nyitvaImg from '../assets/images/nyitva.jpg';
import idoImg from '../assets/images/sminktetovalas-budapest-beautyflow.jpg';
import pcosImg from '../assets/images/pcos-szortelenites.jpg';
import dijakImg from '../assets/images/beautyflow-dijak.webp';
import notinoIcon from '../assets/images/notino-ikon.png';

interface Props {
  lang?: Locale;
}

const { lang = defaultLang } = Astro.props;

const notinoUrlBuda = "https://www.notino.hu/szalonok/beautyflow?source_caller=ui&shortlink=lbbsjxf8&c=salon_detail_redirect&pid=notino_partner&deep_link_value=https%3A%2F%2Fnotino.hu%2Fszalonok%2Fbeautyflow&af_xp=custom";
const notinoUrlPest = "https://www.notino.hu/szalonok/beautyflow-pest?source_caller=ui&shortlink=lbbsjxf8&c=salon_detail_redirect&pid=notino_partner&deep_link_value=https%3A%2F%2Fnotino.hu%2Fszalonok%2Fbeautyflow-pest&af_xp=custom";

const featureImages = [aiGepImg, szegyenlosImg, legkorImg, higienaImg, testmeretImg, nyitvaImg, idoImg, pcosImg, dijakImg];

const content = {
  hu: {
    title: 'Miért a<br /><span class="text-[#c53f75]">Beautyflow szépségszalont</span> válaszd?',
    budaBtn: 'Időpontok Budára',
    pestBtn: 'Időpontok Pestre',
    features: [
      { title: 'AI-vezérelt gépek\ncsúcstechnológiával', description: 'Folyamatosan bővülő gépparkkal, a legmodernebb eszközökkel dolgozunk. A kezeléseink teljes precizitásáról a munkatársaink szakértelme mellett a mesterséges intelligencia gondoskodik.' },
      { title: 'Szégyenlős vagy?\nSemmi gond, segítünk!', description: 'Nehezen vetkőzöl le más előtt? Teljesen érthető. Nálunk szabadon kérheted, hogy a számodra legszimpatikusabb munkatársunk legyen a te egyéni szakembered és onnantól mindig ő kezel majd. Nálunk alapértelmezett a maximális bizalom és diszkréció.' },
      { title: 'Barátságos, „csajos",\nfelszabadító légkör', description: 'Számunkra a szépségszalon a külső-belső szépülésről egyaránt szól, egyszerre törődünk a testtel és a lélekkel. Kávéval, beszélgetéssel, őszinte figyelemmel várunk.' },
      { title: 'Orvosi szintű tisztaság\nés higiénia', description: 'Számunkra a biztonság és az egészség mindennél fontosabb. Minden kezelés során egyszerhasználatos eszközöket és steril környezetet biztosítunk számodra.' },
      { title: 'Minden testalkat\nugyanannyit fizet', description: 'Mi embereket kezelünk, nem testeket. Nem teszünk különbséget a vékony és a termetesebb lányok között, nálunk mindenki ugyannyit fizet, mert így tisztességes.' },
      { title: 'Heti 7 napos\nnyitvatartás', description: 'Legyen tökéletesen tiszta és egészséges az arcbőröd fájdalommentesen.' },
      { title: 'Mi rád fogjuk szánni\naz időt', description: 'Egyszerre mindig csak egyetlen vendéggel foglalkozunk, hogy teljes és korlátlan figyelmet biztosíthassunk a számodra.' },
      { title: 'Sokéves gyakorlat\nPCOS-es vendégekkel', description: 'A policisztás ovárium szindróma rengeteg nőnek keseríti meg az életét. Különleges odafigyeléssel és a megszokottnál jelentősen jobb eredményekkel várunk!' },
      { title: 'Sokszoros díjnyertes,\nmegbízható vállalkozás', description: 'Az elmúlt évek során számos díjat nyertünk el a "Tisztességes vállalkozás" díjtól a "Notino Hónap szalonja" elismerésig.' },
    ],
  },
  en: {
    title: 'Why choose<br /><span class="text-[#c53f75]">Beautyflow beauty salon</span>?',
    budaBtn: 'Appointments in Buda',
    pestBtn: 'Appointments in Pest',
    features: [
      { title: 'AI-powered machines\nwith cutting-edge technology', description: 'We work with a continuously expanding fleet of the most modern equipment. The full precision of our treatments is ensured by both our staff expertise and artificial intelligence.' },
      { title: 'Feeling shy?\nNo problem, we help!', description: "Find it hard to undress in front of others? Completely understandable. You can freely request that your favorite staff member becomes your personal specialist and they'll always be the one treating you. Maximum trust and discretion is our default." },
      { title: 'Friendly, "girly",\nliberating atmosphere', description: "For us, a beauty salon is about both external and internal beauty, we care for both body and soul. We welcome you with coffee, conversation, and sincere attention." },
      { title: 'Medical-grade cleanliness\nand hygiene', description: 'Safety and health are more important to us than anything. During every treatment, we provide disposable tools and a sterile environment for you.' },
      { title: 'Every body type\npays the same', description: "We treat people, not bodies. We don't differentiate between slim and curvier clients, everyone pays the same because that's fair." },
      { title: 'Open 7 days\na week', description: 'Achieve perfectly clean and healthy facial skin painlessly.' },
      { title: "We'll dedicate our\ntime to you", description: 'We only work with one client at a time to ensure you receive our full and undivided attention.' },
      { title: 'Years of experience\nwith PCOS clients', description: "Polycystic ovary syndrome affects many women's lives. We welcome you with special care and significantly better results than usual!" },
      { title: 'Multiple award-winning,\nreliable business', description: 'Over the years, we have won numerous awards from the "Fair Business" award to the "Notino Salon of the Month" recognition.' },
    ],
  },
};

const t = content[lang];
const features = t.features.map((f, i) => ({ ...f, image: featureImages[i] }));
---

<section class="py-16 bg-gradient-to-b from-white via-[#fefcfb] to-[#fdf8f6]">
  <div class="max-w-[1100px] mx-auto px-4">
    <h2 class="font-heading text-3xl lg:text-4xl text-gray-900 mb-12 text-center uppercase" set:html={t.title} />

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <div class="text-center group cursor-pointer bg-white border border-gray-100 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="overflow-hidden aspect-[4/3]">
            <CardImage
              src={feature.image}
              alt={feature.title.replace('\n', ' ')}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <div class="p-5">
            <h3 class="font-heading text-xl text-gray-900 mb-3 whitespace-pre-line leading-tight transition-colors duration-300 group-hover:text-[#c53f75]">
              {feature.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed text-left">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Dual Booking Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-12">
      <a
        href={notinoUrlBuda}
        target="_blank"
        rel="noopener"
        class="px-8 py-3 bg-[#c53f75] text-white font-semibold uppercase text-sm tracking-wide rounded-full shadow-lg hover:bg-[#a33460] hover:shadow-xl transition-all"
      >
        {t.budaBtn}
      </a>

      <div class="hidden sm:block">
        <FixedImage src={notinoIcon} alt="Notino" width={48} class="w-12 h-12" />
      </div>

      <a
        href={notinoUrlPest}
        target="_blank"
        rel="noopener"
        class="px-8 py-3 bg-[#c53f75] text-white font-semibold uppercase text-sm tracking-wide rounded-full shadow-lg hover:bg-[#a33460] hover:shadow-xl transition-all"
      >
        {t.pestBtn}
      </a>
    </div>
  </div>
</section>
