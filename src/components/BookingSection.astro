---
import { ContentImage, FixedImage } from './images';
import bookingImage from '../assets/images/notino-beautyflow.jpg';
import notinoIcon from '../assets/images/notino-ikon.png';
import { type Locale, defaultLang } from '../i18n';

interface Props {
  lang?: Locale;
}

const { lang = defaultLang } = Astro.props;

const content = {
  hu: {
    imageAlt: 'Notino foglalás applikáció',
    title: 'Foglalj időpontot gyorsan és egyszerűen',
    description: 'Gyors, kényelmes, egyszerű és biztonságos foglalás hivatalos partnerünk, a közkedvelt Notino oldalán.',
    budaBtn: 'Időpontok Budára',
    pestBtn: 'Időpontok Pestre',
  },
  en: {
    imageAlt: 'Notino booking app',
    title: 'Book an appointment quickly and easily',
    description: 'Fast, convenient, simple and secure booking through our official partner, the popular Notino platform.',
    budaBtn: 'Appointments in Buda',
    pestBtn: 'Appointments in Pest',
  },
};

const t = content[lang];

const notinoUrlBuda = "https://www.notino.hu/szalonok/beautyflow?source_caller=ui&shortlink=lbbsjxf8&c=salon_detail_redirect&pid=notino_partner&deep_link_value=https%3A%2F%2Fnotino.hu%2Fszalonok%2Fbeautyflow&af_xp=custom";
const notinoUrlPest = "https://www.notino.hu/szalonok/beautyflow-pest?source_caller=ui&shortlink=lbbsjxf8&c=salon_detail_redirect&pid=notino_partner&deep_link_value=https%3A%2F%2Fnotino.hu%2Fszalonok%2Fbeautyflow-pest&af_xp=custom";
---

<section>
  <div class="flex flex-col lg:flex-row">
    <!-- Image - 50% width -->
    <div class="w-full lg:w-1/2">
      <ContentImage
        src={bookingImage}
        alt={t.imageAlt}
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Content - 50% width, centered -->
    <div class="w-full lg:w-1/2 flex items-center justify-center py-12 lg:py-16">
      <div class="w-full px-5 text-center">
        <h2 class="font-heading text-3xl lg:text-4xl text-gray-900 mb-4 uppercase">
          {t.title}
        </h2>

        <p class="text-gray-600 mb-6">
          {t.description}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href={notinoUrlBuda}
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 px-8 py-4 bg-[#c53f75] text-white font-semibold uppercase text-sm tracking-wide rounded-full hover:bg-[#a83363] transition-colors"
          >
            <FixedImage src={notinoIcon} alt="Notino" width={20} class="w-5 h-5" />
            {t.budaBtn}
          </a>

          <a
            href={notinoUrlPest}
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 px-8 py-4 bg-[#c53f75] text-white font-semibold uppercase text-sm tracking-wide rounded-full hover:bg-[#a83363] transition-colors"
          >
            <FixedImage src={notinoIcon} alt="Notino" width={20} class="w-5 h-5" />
            {t.pestBtn}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
