---
/**
 * Logo komponens - Inline SVG megoldás
 *
 * Előnyök:
 * - 0 HTTP request (inline a HTML-ben)
 * - Skálázható bármilyen méretre
 * - CSS-el stílusozható
 *
 * Használat:
 * <Logo class="h-8 w-auto" />
 * <Logo class="h-12 w-auto" />
 */

import logoSvg from '../assets/beautyflow-logo.svg?raw';

interface Props {
  class?: string;
  /** Alternatív szöveg screen reader-ekhez */
  alt?: string;
}

const { class: className = 'h-10 w-auto', alt = 'Beautyflow Szépségszalon' } = Astro.props;
---

<span
  class:list={['inline-block logo-container', className]}
  role="img"
  aria-label={alt}
  set:html={logoSvg}
/>

<style>
  .logo-container :global(svg) {
    width: 100%;
    height: 100%;
  }
</style>
