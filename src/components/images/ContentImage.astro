---
import { Picture } from 'astro:assets';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  priority?: boolean;
  class?: string;
}

const { src, alt, priority = false, class: className } = Astro.props;
---

<Picture
  src={src}
  alt={alt}
  formats={['avif', 'webp']}
  fallbackFormat="jpg"
  widths={[400, 600, 800, 1200]}
  sizes="(max-width: 800px) 100vw, 800px"
  loading={priority ? 'eager' : 'lazy'}
  decoding="async"
  class={className}
/>
