  phone: '+36 (1) 300 9414',
  email: 'hello@beautyflow.pro',
  owner: 'Kónya Fanni',
  taxNumber: '32724316-1-43',
  regNumber: '01-09-439280',
  address: '1116 Budapest, Fegyvernek utca 121.',
