---
interface MenuItem {
  label: string;
  href: string;
  children?: MenuItem[];
}

const menuItems: MenuItem[] = [
  { label: 'Főoldal', href: '/' },
  { label: 'Rólunk', href: '/rolunk' },
  {
    label: 'Kezeléseink',
    href: '#',
    children: [
      { label: 'Lézeres Szőrtelenítés', href: '/dioda-lezeres-szortelenites' },
      { label: 'Tartós Sminktetoválás', href: '/sminktetovalas' },
      { label: 'Tetoválás eltávolítás', href: '/lezeres-tetovalas-eltavolitas' },
      { label: 'Carbon Peeling', href: '/carbon-peeling' },
      { label: 'Hydrabeauty', href: '/hydrabeauty' },
    ]
  },
  { label: 'Gy. I. K.', href: '/gyakran-ismetelt-kerdesek' },
  { label: 'Árak', href: '/arak' },
  {
    label: 'Kapcsolat',
    href: '#',
    children: [
      { label: 'Beautyflow Buda', href: '/beautyflow-buda' },
      { label: 'Beautyflow Pest', href: '/beautyflow-pest' },
    ]
  },
];

const notinoUrl = "https://www.notino.hu/szalonok/beautyflow?source_caller=ui&shortlink=lbbsjxf8&c=salon_detail_redirect&pid=notino_partner&deep_link_value=https%3A%2F%2Fnotino.hu%2Fszalonok%2Fbeautyflow&af_xp=custom";
---

<!-- Desktop Sticky CTA Bar - Hidden by default, shown on scroll (replaces header) -->
<div id="sticky-cta-bar" class="hidden lg:block fixed top-0 left-0 right-0 z-[60] bg-white/90 backdrop-blur-lg shadow-md py-3 transition-transform duration-300 transform -translate-y-full">
  <div class="max-w-[1400px] mx-auto px-6 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex-shrink-0">
      <img src="/images/beautyflow-logo-vilagos.png" alt="Beautyflow" class="h-8 w-auto" />
    </a>

    <!-- Addresses -->
    <div class="flex items-center gap-6 text-gray-700 text-sm">
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-[#c53f75]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span><strong>Buda:</strong> 1116, Vegyész u. 1.</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-[#c53f75]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span><strong>Pest:</strong> 1135, Reitter F. u. 90.</span>
      </div>
    </div>

    <!-- Phone -->
    <a href="tel:+3613009414" class="flex items-center gap-2 text-gray-700 hover:text-[#c53f75] transition-colors">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      <span class="font-semibold">+36 1 300 9414</span>
    </a>

    <!-- CTA Button -->
    <a href="/ingyenes-konzultacio" class="px-5 py-2 bg-[#c53f75] text-white font-semibold uppercase text-xs rounded-full hover:bg-[#a33460] transition-colors">
      Ingyenes konzultáció
    </a>
  </div>
</div>

<header id="main-header" class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-white/20 shadow-sm transition-all duration-300 h-[60px]" style="transform: translateY(0);">
  <div class="container mx-auto px-4 h-full">
    <div class="flex items-center justify-between h-full">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0">
        <img
          src="/images/beautyflow-logo-vilagos.png"
          alt="Beautyflow Szépségszalon és Lézeres Szőrtelenítés Budapest"
          class="h-10 md:h-14 w-auto"
        />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-6">
        {menuItems.map((item) => (
          <div class="relative group">
            {item.children ? (
              <>
                <button class="flex items-center gap-1 text-[13px] font-semibold text-gray-700 hover:text-[#c53f75] transition-colors py-2 tracking-wide uppercase">
                  {item.label}
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="absolute left-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                  <div class="bg-white/95 backdrop-blur-md rounded-lg shadow-lg py-2 min-w-[200px] border border-gray-100">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="block px-4 py-2 text-sm text-gray-700 hover:bg-[#c53f75]/10 hover:text-[#c53f75] transition-colors"
                      >
                        {child.label}
                      </a>
                    ))}
                  </div>
                </div>
              </>
            ) : (
              <a href={item.href} class="text-[13px] font-semibold text-gray-700 hover:text-[#c53f75] transition-colors py-2 tracking-wide uppercase">
                {item.label}
              </a>
            )}
          </div>
        ))}
      </nav>

      <!-- CTA Button (Desktop) -->
      <a
        href={notinoUrl}
        target="_blank"
        rel="noopener"
        class="hidden lg:inline-block btn btn-primary text-sm"
      >
        Időpontfoglalás
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-gray-700 hover:text-[#c53f75] transition-colors z-[70]"
        aria-label="Menu Toggle"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
</header>

<!-- Mobile Navigation Overlay -->
<div id="mobile-overlay" class="fixed inset-0 bg-black/50 z-[55] opacity-0 pointer-events-none transition-opacity duration-300 lg:hidden"></div>

<!-- Mobile Navigation Sidebar -->
<nav id="mobile-menu" class="fixed top-0 right-0 h-full w-[85%] max-w-[320px] bg-white z-[60] transform translate-x-full transition-transform duration-300 ease-out lg:hidden shadow-2xl">
  <div class="flex flex-col h-full">
    <!-- Header with close button -->
    <div class="flex items-center justify-between p-4 border-b border-gray-100">
      <img src="/images/beautyflow-logo-vilagos.png" alt="Beautyflow" class="h-10 w-auto" />
      <button id="mobile-close-btn" class="p-2 text-gray-700 hover:text-[#c53f75] transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Menu Items -->
    <div class="flex-1 overflow-y-auto py-4 px-4">
      {menuItems.map((item, index) => (
        <div class="mb-1 menu-item-animate" style={`animation-delay: ${index * 50}ms`}>
          {item.children ? (
            <div class="mobile-dropdown">
              <button class="mobile-dropdown-btn flex items-center justify-between w-full py-3 px-3 text-gray-700 hover:text-[#c53f75] hover:bg-[#c53f75]/5 rounded-lg transition-all duration-200">
                <span class="font-medium">{item.label}</span>
                <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="mobile-dropdown-content hidden overflow-hidden">
                <div class="pl-4 py-1 space-y-1">
                  {item.children.map((child) => (
                    <a
                      href={child.href}
                      class="block py-2 px-3 text-gray-600 hover:text-[#c53f75] hover:bg-[#c53f75]/5 rounded-lg transition-all duration-200"
                    >
                      {child.label}
                    </a>
                  ))}
                </div>
              </div>
            </div>
          ) : (
            <a href={item.href} class="block py-3 px-3 text-gray-700 hover:text-[#c53f75] hover:bg-[#c53f75]/5 rounded-lg transition-all duration-200 font-medium">
              {item.label}
            </a>
          )}
        </div>
      ))}
    </div>

    <!-- CTA Button at bottom -->
    <div class="p-4 border-t border-gray-100">
      <a
        href={notinoUrl}
        target="_blank"
        rel="noopener"
        class="block w-full py-3 bg-[#c53f75] text-white font-semibold uppercase text-sm text-center rounded-full hover:bg-[#a33460] transition-colors"
      >
        Időpontfoglalás
      </a>
      <a href="tel:+3613009414" class="flex items-center justify-center gap-2 mt-3 py-2 text-[#c53f75] font-semibold">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        +36 1 300 9414
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle - Slide from right
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileCloseBtn = document.getElementById('mobile-close-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileOverlay = document.getElementById('mobile-overlay');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const header = document.getElementById('main-header');

  function openMobileMenu() {
    mobileMenu?.classList.remove('translate-x-full');
    mobileMenu?.classList.add('translate-x-0');
    mobileOverlay?.classList.remove('opacity-0', 'pointer-events-none');
    mobileOverlay?.classList.add('opacity-100', 'pointer-events-auto');
    menuIcon?.classList.add('hidden');
    closeIcon?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';

    // Trigger menu item animations
    const menuItems = document.querySelectorAll('.menu-item-animate');
    menuItems.forEach((item, index) => {
      (item as HTMLElement).style.opacity = '0';
      (item as HTMLElement).style.transform = 'translateX(20px)';
      setTimeout(() => {
        (item as HTMLElement).style.transition = 'all 0.3s ease-out';
        (item as HTMLElement).style.opacity = '1';
        (item as HTMLElement).style.transform = 'translateX(0)';
      }, 100 + index * 50);
    });
  }

  function closeMobileMenu() {
    mobileMenu?.classList.add('translate-x-full');
    mobileMenu?.classList.remove('translate-x-0');
    mobileOverlay?.classList.add('opacity-0', 'pointer-events-none');
    mobileOverlay?.classList.remove('opacity-100', 'pointer-events-auto');
    menuIcon?.classList.remove('hidden');
    closeIcon?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  mobileMenuBtn?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('translate-x-full');
    if (isOpen) {
      closeMobileMenu();
    } else {
      openMobileMenu();
    }
  });

  mobileCloseBtn?.addEventListener('click', closeMobileMenu);
  mobileOverlay?.addEventListener('click', closeMobileMenu);

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeMobileMenu();
    }
  });

  // Mobile dropdown toggle with smooth animation
  const mobileDropdowns = document.querySelectorAll('.mobile-dropdown-btn');
  mobileDropdowns.forEach((btn) => {
    btn.addEventListener('click', () => {
      const content = btn.nextElementSibling as HTMLElement;
      const arrow = btn.querySelector('svg');

      if (content?.classList.contains('hidden')) {
        content.classList.remove('hidden');
        content.style.maxHeight = '0';
        content.style.opacity = '0';
        requestAnimationFrame(() => {
          content.style.transition = 'max-height 0.3s ease-out, opacity 0.3s ease-out';
          content.style.maxHeight = content.scrollHeight + 'px';
          content.style.opacity = '1';
        });
      } else if (content) {
        content.style.maxHeight = '0';
        content.style.opacity = '0';
        setTimeout(() => {
          content.classList.add('hidden');
        }, 300);
      }

      arrow?.classList.toggle('rotate-180');
    });
  });

  // Scroll-based header animation with reduced-motion support
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  const stickyCTABar = document.getElementById('sticky-cta-bar');

  // Check if we're on desktop (lg breakpoint = 1024px)
  const isDesktop = () => window.innerWidth >= 1024;

  if (!prefersReducedMotion && header) {
    let lastScrollY = 0;
    let headerHidden = false;

    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;
      const scrollingUp = currentScrollY < lastScrollY;
      const scrollingDown = currentScrollY > lastScrollY;

      // Desktop behavior: show menu on scroll up, hide on scroll down
      if (isDesktop()) {
        // Scrolled down past threshold and scrolling down - hide header, show CTA bar
        if (currentScrollY > 100 && scrollingDown && !headerHidden) {
          headerHidden = true;
          header.style.transform = 'translateY(-100%)';
          if (stickyCTABar) {
            stickyCTABar.classList.remove('-translate-y-full');
            stickyCTABar.classList.add('translate-y-0');
          }
        }
        // Scrolling up - show header (menu), hide CTA bar
        else if (scrollingUp && headerHidden) {
          headerHidden = false;
          header.style.transform = 'translateY(0)';
          if (stickyCTABar) {
            stickyCTABar.classList.remove('translate-y-0');
            stickyCTABar.classList.add('-translate-y-full');
          }
        }
        // At top of page - always show header
        else if (currentScrollY <= 10) {
          headerHidden = false;
          header.style.transform = 'translateY(0)';
          if (stickyCTABar) {
            stickyCTABar.classList.remove('translate-y-0');
            stickyCTABar.classList.add('-translate-y-full');
          }
        }
      }

      // Background color change (for all devices)
      if (currentScrollY > 10) {
        header.classList.remove('bg-white/80', 'shadow-sm');
        header.classList.add('bg-white/95', 'shadow-md');
      } else {
        header.classList.remove('bg-white/95', 'shadow-md');
        header.classList.add('bg-white/80', 'shadow-sm');
      }

      lastScrollY = currentScrollY;
    }, { passive: true });

    // Handle resize - reset if switching to mobile while header is hidden
    window.addEventListener('resize', () => {
      if (!isDesktop() && headerHidden) {
        headerHidden = false;
        header.style.transform = 'translateY(0)';
        if (stickyCTABar) {
          stickyCTABar.classList.remove('translate-y-0');
          stickyCTABar.classList.add('-translate-y-full');
        }
      }
    }, { passive: true });
  }
</script>
