        class="absolute inset-0 w-full h-full object-cover"
        width={800}
        height={600}
        format="webp"
        quality={85}
        loading="eager"
        fetchpriority="high"
      />
      <!-- Google Rating Badge - bottom right corner -->
      <div class="absolute bottom-6 right-6 bg-white/95 backdrop-blur-sm rounded-xl shadow-xl p-4 google-rating-badge">
        <div class="flex items-center gap-3">
          <Image src={googleLogo} alt="Google" class="w-10 h-10 rounded-full" width={40} height={40} format="webp" />
          <div>
            <div class="flex items-center gap-1 mb-1">
              <span class="text-2xl font-bold text-gray-900 rating-number" data-target="5.0">0</span>
              <div class="flex">
                {[1, 2, 3, 4, 5].map(() => (
                  <svg class="w-4 h-4 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
