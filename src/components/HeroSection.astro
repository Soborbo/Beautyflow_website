      </div>
    </div>

    <!-- Right side - Content -->
    <div class="lg:w-1/2 bg-[#fff9f7] flex items-center justify-center py-8 lg:pt-[80px] lg:pb-6">
      <div class="w-full px-5 text-center">
        <!-- Mobile image with Google rating -->
