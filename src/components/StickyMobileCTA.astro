---
import { type Locale, defaultLang, getLocalizedPath } from '../i18n';

interface Props {
  lang?: Locale;
}

const { lang = defaultLang } = Astro.props;

const labels = {
  hu: {
    callNow: 'Hívj most!',
    callback: 'Kérj visszahívást!',
  },
  en: {
    callNow: 'Call Now!',
    callback: 'Request Callback!',
  },
};

const t = labels[lang];
const consultationPath = getLocalizedPath(lang === 'hu' ? '/ingyenes-konzultacio' : '/free-consultation', lang);
---

<!-- Sticky Mobile CTA - appears after 10 seconds of scrolling -->
<div id="sticky-cta" class="fixed bottom-0 left-0 right-0 z-50 lg:hidden transform translate-y-full transition-transform duration-300">
  <div class="bg-white shadow-[0_-4px_20px_rgba(0,0,0,0.15)] p-3">
    <div class="flex gap-2">
      <!-- Call Now Button -->
      <a
        href="tel:+3613009414"
        class="flex-1 flex items-center justify-center gap-2 py-3 bg-[#1a1a2e] text-white font-semibold uppercase text-sm rounded-lg"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        {t.callNow}
      </a>

      <!-- Request Callback Button -->
      <a
        href={consultationPath}
        class="flex-1 flex items-center justify-center gap-2 py-3 bg-[#c53f75] text-white font-semibold uppercase text-sm rounded-lg"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        {t.callback}
      </a>
    </div>
  </div>
</div>

<script>
  function initStickyCTA() {
    const stickyCTA = document.getElementById('sticky-cta');

    let hasScrolled = false;
    let timeoutId: ReturnType<typeof setTimeout> | null = null;
    let isVisible = false;

    function showCTA() {
      if (!isVisible && stickyCTA) {
        stickyCTA.classList.remove('translate-y-full');
        stickyCTA.classList.add('translate-y-0');
        isVisible = true;
      }
    }

    function handleScroll() {
      if (!hasScrolled && window.scrollY > 100) {
        hasScrolled = true;
        // Show after 10 seconds of first scroll
        timeoutId = setTimeout(showCTA, 10000);
      }
    }

    window.addEventListener('scroll', handleScroll, { passive: true });
  }

  document.addEventListener('DOMContentLoaded', initStickyCTA);
  document.addEventListener('astro:page-load', initStickyCTA);
</script>
