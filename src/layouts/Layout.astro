---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A legcsajosabb szépségszalon a környékeden. Kiváló értékelések, a legmodernebb gépek, nagyszerű hangulat és sokéves szakmai tapasztalat vár." } = Astro.props;
---

<!DOCTYPE html>
<html lang="hu">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/images/Beautyflow-favicon.png" />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:locale" content="hu_HU" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://beautyflow.pro/" />
    <meta property="og:site_name" content="Beautyflow Szépségszalon és Lézeres Szőrtelenítés Budapest" />
    <meta property="og:image" content="/images/beautyflow-fb.jpg" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body class="min-h-screen flex flex-col overflow-x-hidden">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <StickyMobileCTA />
  </body>
</html>
